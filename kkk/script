#!/bin/bash
set -euo pipefail

echo "ðŸ” Extracting secrets used in ECS task definitionsâ€¦"

# 1. Grab all valueFrom secrets (e.g., ${secret_DefaultConnection})
grep -Roh '"valueFrom": *"\${secret_[^"]*}"' src/terraform/pulse/compute/ecs/fargate/ \
  | sed -E 's/.*\${(secret_[^}]*)}.*/\1/' \
  | sort -u > ecs_secrets.txt

echo "âœ… Found $(wc -l < ecs_secrets.txt) ECS secrets"
echo

# 2. Grab all actual AWS Secrets Manager names defined in Terraform
grep -Roh 'aws_secretsmanager_secret\.[a-zA-Z0-9_-]*' src/terraform/pulse/security/secrets-manager/ \
  | sed -E 's/.*aws_secretsmanager_secret\.([a-zA-Z0-9_-]*).*/\1/' \
  | sort -u > terraform_secrets.txt

echo "âœ… Found $(wc -l < terraform_secrets.txt) Terraform secrets"
echo

# 3. Compare the two lists
echo "ðŸ”Ž Checking which ECS secrets are defined in Terraformâ€¦"
missing=$(comm -23 ecs_secrets.txt terraform_secrets.txt || true)

if [[ -n "$missing" ]]; then
    echo "âš ï¸ The following ECS secrets were referenced in ECS tasks but not found in Terraform:"
    echo "$missing"
else
    echo "âœ… All ECS secrets have matching Terraform definitions"
fi

echo
echo "ðŸ“‹ ECS secrets used (saved in ecs_secrets.txt):"
cat ecs_secrets.txt

echo
echo "ðŸ“‹ Terraform secrets defined (saved in terraform_secrets.txt):"
cat terraform_secrets.txt
